      "storybook": "^7.5.3",
      "tailwindcss": "^3.3.5",
      "typescript": "^5.3.2"
    },
    "engines": {
      "node": ">=18.17.0",
      "npm": ">=9.6.7"
    },
    "browserslist": {
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all"
      ],
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    },
    "lint-staged": {
      "*.{js,jsx,ts,tsx}": [
        "eslint --fix",
        "prettier --write"
      ],
      "*.{json,md}": [
        "prettier --write"
      ]
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    },
    "jest": {
      "testEnvironment": "jsdom",
      "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
      ],
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
      }
    },
    "prisma": {
      "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    },
    "prettier": {
      "semi": false,
      "singleQuote": true,
      "tabWidth": 2,
      "trailingComma": "es5",
      "plugins": [
        "prettier-plugin-tailwindcss"
      ]
    }
  }